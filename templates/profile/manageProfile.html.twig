{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl mb-6">Profil de {{ participant.compte.pseudo }}</h1>
    <div class="profileForm flex justify-evenly w-1/5">
        <div class="shrink-0 grow-0 basis-auto md:w-2/12 lg:w-3/12">
            {% if participant.urlPhoto %}
                <img src="{{ asset('uploads/' ~ participant.urlPhoto) }}" alt="Photo de profil">
                {% else %}
                    <img src="https://fakeimg.pl/350x200/?" alt="Fake photo">
            {% endif %}
        </div>
        <div class="profileFormTxt">
            {{ form_start(profileForm) }}
            <div class="mb-3 flex justify-between">
                <label for="pseudo">Pseudo :</label>
                <input id="pseudo" name="pseudo" type="text" value="{{ participant.compte.pseudo }}">
            </div>
            <div class="group mb-3 flex justify-between">
                {{ form_label(profileForm.prenom) }}
                {{ form_widget(profileForm.prenom) }}
                {{ form_errors(profileForm.prenom) }}
            </div>
            <div class="group mb-3 flex justify-between">
                {{ form_label(profileForm.nom) }}
                {{ form_widget(profileForm.nom) }}
                {{ form_errors(profileForm.nom) }}
            </div>
            <div class="group mb-3 flex justify-between">
                {{ form_label(profileForm.telephone) }}
                {{ form_widget(profileForm.telephone) }}
                {{ form_errors(profileForm.telephone) }}
            </div>
            <div class="group mb-3 flex justify-between">
                <label for="email">Email :</label>
                <input id="email" name="email" type="email" value="{{ participant.compte.email }}">
            </div>
            <div class="group mb-3 flex justify-between">
                <label for="password">Mot de passe :</label>
                <input id="password" name="password" type="password">
            </div>
            <div class="group mb-3 flex justify-between">
                <label for="password2">Confirmation :</label>
                <input id="password2" name="password2" type="password">
            </div>
            <div class="group mb-3 flex justify-between">
                {{ form_label(profileForm.site) }}
                {{ form_widget(profileForm.site) }}
                {{ form_errors(profileForm.site) }}
            </div>
            <div class="group mb-3 flex flex-col justify-between">
                {{ form_label(profileForm.urlPhoto) }}
                {{ form_widget(profileForm.urlPhoto) }}
            </div>
            <div class="group mb-3 flex justify-center">
                <button class="bg-green-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full m-3">Enregistrer</button>
                <a href="{{ path('app_home') }}" class="bg-red-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full  m-3">Annuler</a>
            </div>
            {{ form_end(profileForm) }}
        </div>

    </div>

{% endblock %}
