{% extends 'base.html.twig' %}
{% block title %}Gestion des sites{% endblock %}
{% block body %}
    <h1 class="text-4xl mt-3 text-center">GÃ©rer les sites</h1>
    <h2 class="text-2xl mt-3">Filtrer les sites</h2>
    {{ form_start(filterForm) }}
    <div class="flex items-center mt-2">
        <p class="inset-y-0 flex items-center">Le nom contient : </p>
        {{ form_widget(filterForm.nom, {'attr': {'class': 'mb-3 input w-1/3 max-w-xs input-bordered ml-5'}}) }}
        {{ form_widget(filterForm.search, {'attr': {'class': 'py-2 px-4 ml-4 btn btn-info hover:bg-blue-300'}}) }}
    </div>
    {{ form_end(filterForm) }}
    <div class="flex flex-col">
        <table class="table table-pin-rows table-pin-cols w-1/4">
            <thead>
            <tr>
                <th class="border p-2">Site</th>
                <th class="border p-2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td class="border p-2">{{ site.nom }}</td>
                    <td class="border p-2">
                        <a href="{{ path('app_update_site',{ 'id' : site.id}) }}" class="btn btn-outline btn-warning">Modifier</a>
                        <a href="{{ path('app_delete_site',{'id' : site.id}) }}" class="btn btn-outline btn-error">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="mt-3">
            <a href="{{ path('app_create_site') }}" class="btn btn-success hover:bg-green-300">Ajouter</a>
        </div>
    </div>
{% endblock %}