{% extends 'base.html.twig'%}
{% block title %}Ajout d'un site{% endblock %}
{% block body %}
    <h1 class="text-4xl mb-8 text-center">Ajout d'un site</h1>
    {{ form_start(siteForm) }}
    <div class="mx-auto w-1/5">
        <div>
            <div class="flex justify-between mt-3">
                {{ form_label(siteForm.nom) }}
                {{ form_widget(siteForm.nom) }}
            </div>
                {{ form_errors(siteForm.nom) }}
        </div>
    </div>
    <div class="flex justify-center mt-8">
        <button type="submit" class="btn btn-success hover:bg-green-300">Enregistrer</button>
    </div>
    {{ form_end(siteForm) }}
{% endblock %}