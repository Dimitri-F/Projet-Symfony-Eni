{% extends 'base.html.twig' %}
{% block title %}Gestion des lieux{% endblock %}
{% block body %}
    <h1 class="text-4xl mt-3 text-center">GÃ©rer les lieux</h1>
    <h2 class="text-2xl mt-3">Filtrer les lieux</h2>
    {{ form_start(filterCity) }}
    <div class="flex items-center mt-2">
        <p class="inset-y-0 flex items-center">Le nom contient : </p>
        {{ form_widget(filterCity.nom, {'attr': {'class': 'mb-3 input w-1/3 max-w-xs input-bordered ml-5'}}) }}
        {{ form_widget(filterCity.search, {'attr': {'class': 'btn mx-3 mb-3'}}) }}
    </div>
    {{ form_end(filterCity) }}
    <div class="flex flex-col">
            <table class="table table-pin-rows table-pin-cols w-1/4">
                <thead>
                <tr>
                    <th class="border p-2">Ville</th>
                    <th class="border p-2">Code Postal</th>
                    <th class="border p-2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for ville in villes %}
                    <tr>
                        <td class="border p-2">{{ ville.nom }}</td>
                        <td class="border p-2">{{ ville.codePostal }}</td>
                        <td class="border p-2">
                            <a href="{{ path('app_update_ville',{ 'id' : ville.id}) }}">Modifier</a>
                            - <a href="{{ path('app_remove_ville',{'id' : ville.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="mt-3">
                <a href="{{ path('app_create_lieu') }}" class="btn">Ajouter</a>
            </div>
    </div>
{% endblock %}
