<!DOCTYPE html>
<html lang="fr" data-theme="cupcake">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/img/sortir-icon.png') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <script src="https://kit.fontawesome.com/6dc61f63db.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
            <header class="text-gray-600 body-font mb-3">
                <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
                    <a class="flex title-font font-medium items-center text-gray-900 my-8 md:mb-0">
                         <i class="fa-solid fa-person-through-window fa-2xl ml-3"></i>
                        <span class="ml-5 text-xl uppercase">Sortir.com</span>
                    </a>

                    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
                        {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('app_register') }}" class="mr-5 hover:text-gray-900">Gestion utilisateurs</a>
                        <a class="mr-5 hover:text-gray-900">Villes</a>
                        <a class="mr-5 hover:text-gray-900">Sites</a>
                        {% endif %}
                        {% if is_granted("ROLE_USER") %}
                        <a href="{{ path('app_home') }}" class="mr-5 hover:text-gray-900">Accueil</a>
                        <a href="{{ path('details_profile', {'id':app.user.id}) }}" class="mr-5 hover:text-gray-900">Mon profil</a>
                        <a href="{{ path('app_logout') }}" class="mr-5 hover:text-gray-900">Se d√©connecter</a>
                        {% endif %}
                    </nav>
                </div>
            </header>
            {%  for label, messages in app.flashes%}
                {% for message in messages %}
                    <div class="alert-{{ label }} text-center ">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
        <main class="mx-40">
            {% block body %}

            {% endblock %}
        </main>

        <footer class="mt-5">
            <p class="text-center text-uppercase">
                &copy; Sortir :  {{ "now"| date("Y") }}
            </p>
        </footer>
    </div>
</body>
</html>
